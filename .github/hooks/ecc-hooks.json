{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/session-start.js",
        "timeoutSec": 20
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/suggest-compact.js",
        "timeoutSec": 10
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/post-edit-format.js",
        "timeoutSec": 20
      },
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/post-edit-typecheck.js",
        "timeoutSec": 20
      },
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/post-edit-console-warn.js",
        "timeoutSec": 15
      }
    ],
    "agentStop": [
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/check-console-log.js",
        "timeoutSec": 20
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/session-end.js",
        "timeoutSec": 20
      },
      {
        "type": "command",
        "powershell": "node .github/scripts/hooks/evaluate-session.js",
        "timeoutSec": 30
      }
    ]
  }
}
